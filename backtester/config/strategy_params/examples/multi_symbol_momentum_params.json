{
  "strategy_name": "Multi-Symbol Momentum Strategy",
  "strategy_class": "MultiSymbolMomentumStrategy",
  "description": "Portfolio-wide momentum strategy with cross-symbol analysis and dynamic symbol selection",
  "version": "1.0.0",
  "author": "Backtester System",
  "category": "momentum",
  
  "technical_parameters": {
    "roc_period": 20,
    "rsi_period": 14,
    "momentum_threshold": 0.02,
    "correlation_lookback": 60,
    "relative_strength_lookback": 20,
    "use_symbol_ranking": true,
    "max_active_symbols": 3,
    "min_correlation": -0.5,
    "max_correlation": 0.8
  },
  
  "multi_symbol_config": {
    "symbols": ["BTC/USDT", "ETH/USDT", "SOL/USDT", "BNB/USDT", "ADA/USDT"],
    "symbol_specific_params": {
      "BTC/USDT": {
        "momentum_threshold": 0.015,
        "atr_multiplier_sl": 2.0
      },
      "ETH/USDT": {
        "momentum_threshold": 0.02,
        "atr_multiplier_sl": 2.5
      },
      "SOL/USDT": {
        "momentum_threshold": 0.025,
        "atr_multiplier_sl": 3.0
      }
    },
    "correlation_threshold": 0.7,
    "max_positions": 3,
    "rebalance_frequency": "weekly"
  },
  
  "risk_management": {
    "sl_atr_multiplier": 2.0,
    "tp_atr_multiplier": 3.0,
    "max_position_size": 0.33,
    "risk_per_trade": 0.02,
    "max_portfolio_risk": 0.06,
    "position_sizing_method": "risk_parity"
  },
  
  "symbol_selection": {
    "ranking_method": "momentum_score",
    "ranking_period": 20,
    "rerank_frequency": "daily",
    "min_liquidity": 1000000,
    "exclude_correlated": true,
    "correlation_threshold": 0.9
  },
  
  "market_regime": {
    "detect_regime": true,
    "regime_lookback": 60,
    "bull_market_threshold": 0.6,
    "bear_market_threshold": 0.4,
    "adjust_parameters": true
  },
  
  "signal_processing": {
    "clean_signals": true,
    "min_signal_gap": 5,
    "signal_confirmation_bars": 1,
    "allow_pyramiding": false,
    "cross_symbol_confirmation": true
  },
  
  "portfolio_parameters": {
    "init_cash": 100000,
    "fees": 0.001,
    "slippage": 0.0005,
    "freq": "1D",
    "rebalance_threshold": 0.1
  },
  
  "optimization_ranges": {
    "roc_period": [15, 20, 25, 30],
    "momentum_threshold": [0.01, 0.015, 0.02, 0.025],
    "max_active_symbols": [2, 3, 4],
    "correlation_lookback": [30, 60, 90]
  },
  
  "vbt_optimization": {
    "roc_period": {"type": "range", "start": 15, "stop": 31, "step": 5},
    "max_active_symbols": {"type": "list", "values": [2, 3, 4]},
    "momentum_threshold": {"type": "linspace", "start": 0.01, "stop": 0.025, "num": 5}
  },
  
  "data_parameters": {
    "symbols": ["BTC/USDT", "ETH/USDT", "SOL/USDT", "BNB/USDT", "ADA/USDT"],
    "timeframe": "1h",
    "start_date": "2021-01-01",
    "end_date": "2023-12-31",
    "required_columns": ["open", "high", "low", "close", "volume"]
  },
  
  "performance_targets": {
    "min_sharpe_ratio": 1.5,
    "max_drawdown": 0.20,
    "min_win_rate": 0.50,
    "min_profit_factor": 1.4,
    "min_total_return": 0.30
  },
  
  "validation_rules": {
    "min_data_points": 500,
    "required_indicators": ["momentum_score", "relative_strength", "symbol_rankings"],
    "parameter_constraints": {
      "technical_parameters.max_active_symbols <= len(symbols)": true,
      "technical_parameters.max_active_symbols > 0": true,
      "technical_parameters.min_correlation < technical_parameters.max_correlation": true,
      "risk_management.max_position_size <= 1.0": true,
      "risk_management.max_portfolio_risk > risk_management.risk_per_trade": true
    },
    "data_quality_checks": {
      "no_missing_values": true,
      "no_duplicate_timestamps": true,
      "positive_volume": true,
      "valid_ohlc": true,
      "min_symbols": 3
    }
  },
  
  "metadata": {
    "created_date": "2024-01-01",
    "last_modified": "2024-01-01",
    "tags": ["multi_symbol", "momentum", "portfolio", "ranking", "correlation"],
    "complexity": "very_high",
    "market_types": ["crypto"],
    "timeframes": ["30m", "1h", "4h"],
    "notes": [
      "Requires multiple symbols with good liquidity",
      "Dynamic symbol selection based on momentum",
      "Correlation filtering prevents concentration risk",
      "Consider market regime for parameter adjustment"
    ]
  }
} 