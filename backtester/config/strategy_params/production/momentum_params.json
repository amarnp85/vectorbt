{
  "strategy_name": "Momentum Strategy",
  "strategy_class": "MomentumStrategy",
  "description": "Trend-following strategy using multiple momentum indicators with regime filters",
  "version": "1.0.0",
  "author": "Backtester System",
  "category": "momentum",
  
  "technical_parameters": {
    "roc_period": 20,
    "rsi_period": 14,
    "macd_fast": 12,
    "macd_slow": 26,
    "macd_signal": 9,
    "momentum_threshold": 0.02,
    "rsi_overbought": 70,
    "rsi_oversold": 30,
    "regime_filter": true,
    "atr_multiplier_sl": 2.0,
    "atr_multiplier_tp": 3.0,
    "adx_threshold": 25
  },
  
  "risk_management": {
    "sl_atr_multiplier": 2.0,
    "tp_atr_multiplier": 3.0,
    "max_position_size": 1.0,
    "risk_per_trade": 0.02,
    "max_drawdown_limit": 0.25
  },
  
  "trend_confirmation": {
    "use_adx_filter": true,
    "adx_period": 14,
    "adx_threshold": 25.0,
    "min_trend_strength": 20.0,
    "use_ma_filter": true,
    "ma_period": 50
  },
  
  "signal_processing": {
    "clean_signals": true,
    "min_signal_gap": 3,
    "signal_confirmation_bars": 1,
    "allow_pyramiding": false,
    "momentum_score_weight": {
      "roc": 0.3,
      "rsi": 0.2,
      "macd": 0.3,
      "price_ma": 0.2
    }
  },
  
  "portfolio_parameters": {
    "init_cash": 100000,
    "fees": 0.001,
    "slippage": 0.0005,
    "freq": "1D"
  },
  
  "optimization_ranges": {
    "roc_period": [10, 15, 20, 25, 30],
    "rsi_period": [10, 14, 18, 21],
    "momentum_threshold": [0.01, 0.015, 0.02, 0.025, 0.03],
    "adx_threshold": [20, 25, 30, 35],
    "atr_multiplier_sl": [1.5, 2.0, 2.5, 3.0],
    "atr_multiplier_tp": [2.5, 3.0, 4.0, 5.0]
  },
  
  "vbt_optimization": {
    "roc_period": {"type": "range", "start": 10, "stop": 31, "step": 5},
    "momentum_threshold": {"type": "linspace", "start": 0.01, "stop": 0.03, "num": 5},
    "adx_threshold": {"type": "list", "values": [20, 25, 30, 35]}
  },
  
  "data_parameters": {
    "symbols": ["BTC/USDT", "ETH/USDT", "SOL/USDT"],
    "timeframe": "1h",
    "start_date": "2021-01-01",
    "end_date": "2023-12-31",
    "required_columns": ["open", "high", "low", "close", "volume"]
  },
  
  "performance_targets": {
    "min_sharpe_ratio": 1.2,
    "max_drawdown": 0.25,
    "min_win_rate": 0.45,
    "min_profit_factor": 1.5,
    "min_total_return": 0.20
  },
  
  "validation_rules": {
    "min_data_points": 500,
    "required_indicators": ["roc", "rsi", "macd", "adx", "sma_20", "sma_50"],
    "parameter_constraints": {
      "technical_parameters.roc_period > 0": true,
      "technical_parameters.rsi_period > 0": true,
      "technical_parameters.macd_fast < technical_parameters.macd_slow": true,
      "technical_parameters.momentum_threshold > 0": true,
      "technical_parameters.adx_threshold > 0": true,
      "risk_management.sl_atr_multiplier > 0": true,
      "risk_management.tp_atr_multiplier > risk_management.sl_atr_multiplier": true
    },
    "data_quality_checks": {
      "no_missing_values": true,
      "no_duplicate_timestamps": true,
      "positive_volume": true,
      "valid_ohlc": true
    }
  },
  
  "metadata": {
    "created_date": "2024-01-01",
    "last_modified": "2024-01-01",
    "tags": ["momentum", "trend_following", "roc", "macd", "adx"],
    "complexity": "high",
    "market_types": ["crypto", "stocks", "forex"],
    "timeframes": ["30m", "1h", "4h"],
    "notes": [
      "Works best in trending markets",
      "ADX filter helps avoid choppy markets",
      "Composite momentum score provides robust signals",
      "Consider reducing position size in low ADX environments"
    ]
  }
} 