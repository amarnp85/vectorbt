{
  "strategy_name": "Pairs Trading Strategy",
  "strategy_class": "PairsTradingStrategy",
  "description": "Statistical arbitrage strategy trading cointegrated pairs with z-score based signals",
  "version": "1.0.0",
  "author": "Backtester System",
  "category": "arbitrage",
  
  "technical_parameters": {
    "window": 30,
    "entry_z": 2.0,
    "exit_z": 0.0,
    "coint_pvalue": 0.05,
    "atr_multiplier_sl": 2.0,
    "atr_multiplier_tp": 3.0,
    "lookback_period": 60,
    "min_half_life": 5,
    "max_half_life": 60
  },
  
  "risk_management": {
    "sl_atr_multiplier": 2.0,
    "tp_atr_multiplier": 3.0,
    "max_position_size": 0.5,
    "risk_per_trade": 0.02,
    "max_drawdown_limit": 0.15,
    "position_sizing_method": "equal_weight"
  },
  
  "pair_selection": {
    "method": "cointegration",
    "coint_pvalue_threshold": 0.05,
    "min_correlation": 0.7,
    "lookback_days": 90,
    "reselect_frequency": "monthly",
    "max_pairs": 5
  },
  
  "entry_conditions": {
    "min_zscore_duration": 1,
    "volume_filter": false,
    "trend_filter": false,
    "volatility_filter": true,
    "min_spread_volatility": 0.01
  },
  
  "exit_conditions": {
    "exit_at_zero": true,
    "stop_loss_zscore": 3.5,
    "time_based_exit": true,
    "max_hold_period": 30,
    "force_exit_zscore": 0.5
  },
  
  "signal_processing": {
    "clean_signals": true,
    "min_signal_gap": 5,
    "signal_confirmation_bars": 0,
    "allow_pyramiding": false
  },
  
  "portfolio_parameters": {
    "init_cash": 100000,
    "fees": 0.001,
    "slippage": 0.0005,
    "freq": "1D"
  },
  
  "optimization_ranges": {
    "window": [20, 30, 40, 50],
    "entry_z": [1.5, 2.0, 2.5, 3.0],
    "exit_z": [-0.5, 0.0, 0.5],
    "coint_pvalue": [0.01, 0.05, 0.10],
    "atr_multiplier_sl": [1.5, 2.0, 2.5],
    "atr_multiplier_tp": [2.0, 3.0, 4.0]
  },
  
  "vbt_optimization": {
    "window": {"type": "range", "start": 20, "stop": 51, "step": 10},
    "entry_z": {"type": "linspace", "start": 1.5, "stop": 3.0, "num": 4},
    "exit_z": {"type": "list", "values": [-0.5, 0.0, 0.5]}
  },
  
  "data_parameters": {
    "symbols": ["BTC/USDT", "ETH/USDT", "BNB/USDT", "SOL/USDT", "ADA/USDT"],
    "timeframe": "1h",
    "start_date": "2021-01-01",
    "end_date": "2023-12-31",
    "required_columns": ["open", "high", "low", "close", "volume"],
    "min_data_points": 1000
  },
  
  "performance_targets": {
    "min_sharpe_ratio": 1.5,
    "max_drawdown": 0.15,
    "min_win_rate": 0.60,
    "min_profit_factor": 1.5,
    "min_total_return": 0.15
  },
  
  "validation_rules": {
    "min_data_points": 1000,
    "required_indicators": ["spread", "zscore", "hedge_ratio"],
    "parameter_constraints": {
      "technical_parameters.window > 10": true,
      "technical_parameters.entry_z > 0": true,
      "technical_parameters.entry_z > technical_parameters.exit_z": true,
      "technical_parameters.coint_pvalue > 0": true,
      "technical_parameters.coint_pvalue < 1": true,
      "risk_management.sl_atr_multiplier > 0": true
    },
    "data_quality_checks": {
      "no_missing_values": true,
      "no_duplicate_timestamps": true,
      "positive_volume": true,
      "valid_ohlc": true,
      "min_symbols": 2
    }
  },
  
  "pairs_config": {
    "predefined_pairs": [],
    "excluded_pairs": [],
    "sector_grouping": false,
    "correlation_method": "pearson",
    "spread_calculation": "log_ratio"
  },
  
  "metadata": {
    "created_date": "2024-01-01",
    "last_modified": "2024-01-01",
    "tags": ["pairs_trading", "statistical_arbitrage", "cointegration", "mean_reversion"],
    "complexity": "high",
    "market_types": ["crypto", "stocks"],
    "timeframes": ["30m", "1h", "4h"],
    "notes": [
      "Requires careful pair selection",
      "Monitor cointegration stability",
      "Works best with liquid, correlated assets",
      "Consider transaction costs carefully"
    ]
  }
} 